                    </div>
                    <div class="stock rateing">
                        <span>1kg</span>
                        <span>IN STOCK</span>
                    </div>
                    <div class="stars">
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                    </div>
                    <div class="available">
                        <h6>
                            AVAILABLE 49
                        </h6>
                        <div></div>
                    </div>
                </div>
            </div>
            <div class="row">
                @foreach (var basketproduct in Model.BasketProducts)
                {
                    
                    <div class="col-4 mycard">
                        <div class="card mycard">
                            <img class="card-img-top" src="./assets/img/@basketproduct.Image" alt="Card image cap">
                            <div class="card-body">
                                <h5 class="card-title">@basketproduct.Name</h5>
                                <span class="stock">IN STOCK</span>
                                <div class="rateing">

                                    @for (int count = 0; count < basketproduct.Rate; count++)
                                    {
                                        <i class="fas fa-star activerateing"></i>
                                    }
                                </div>
                                <div class="price mt-3">
                                    <span class="oldprice">$@basketproduct.OldPrice</span>
                                    <span class="newprice mx-2">$@basketproduct.NewPrice</span>
                                </div>
                                <a  class="btn btn-primary mt-5" asp-controller="Home" asp-action="AddBasket" asp-route-id="@basketproduct.Id">Add to card</a>
                            </div>
                            <div class="percent">26%</div>
                            <div class="zoom"><i class="fab fa-joomla"></i></div>
                            <div class="heart"><i class="far fa-heart"></i></div>
                        </div>
                    </div>
                }
               
            </div>
        </div>
    </section>
