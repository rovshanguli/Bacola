                </div>
            </div>*@
            <div class="carousel-inner">
                @{
                    var i = 0;
                    foreach (var item in Model.Sliders)
                    {
                        var itemClass = i++ == 0 ? "item active" : "item";
                        
                        <div class="carousel-item @itemClass" style="width: 100%;" >
                            <img class="d-block w-100 " style="width: 100%;" src="./assets/img/@item.Image" alt="First slide">
                        </div>
                    }
                }
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev" style="color: red;">
                <span class="carousel-control-prev-icon" aria-hidden="true" ></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </section>
    <section id="products">
        <div class="container products">
            <div class="main-product">
                <div class="image">
                    <a href="">
                        <img src="./assets/img/baverages-1.jpg" alt="">
                    </a>
                </div>
                <div class="detale">
                    <h3>Beverages</a></h3>
                </div>
                <div class="count">11 Items</div>
            </div>
            <div class="row">
                @foreach (var item in Model.Products)
                {
                    <div class="allproducts col-3">
                        <div class="image">
                            <a href="">
                                <img src="./assets/img/@item.Image" alt="">
                            </a>
                        </div>
                        <div class="detale">
                            <h3><a href="">@item.Name</a></h3>
                            <span>@item.Count items</span>
                        </div>
                    </div>
                }


            </div>
        </div>
        
    </section>
    <section id="dealsoftheweek">
        <div class="container deals">
            <div class="timerdeal">
